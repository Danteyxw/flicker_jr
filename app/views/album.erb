<div class="container">
  <h1><%= @album.title %></h1>

  <div class="album_info">
    <h2>Album Information</h2>
    <p id="timestamps">Created at: <%= @album.created_at %> Last Update: <%= @album.updated_at %></p>
    <p id="description"><%= @album.description %></p>
  </div>

  <form id="add_photos" action="/albums/<%= @album.id %>/add" method="post" enctype="multipart/form-data">
    <h2>Add Photos</h2>
    <input name="file" type="file" accept="image/*" required>
    <textarea name="caption" placeholder="Write your caption here..."></textarea>
    <input type="submit" value="submit">
  </form>

  <div class="photos">
    <h2>Photos</h2>
    <% @album.photos.each do |photo| %>
      <figure>
        <a href="/albums/<%= @album.id %>/<%= photo.id %>">
          <img src="<%= photo.file %>" alt="<%= photo.file.identifier %>">
          <figcaption><%= photo.caption %></figcaption>
        </a>
      </figure>
      <form action="/albums/<%= @album.id %>/<%= photo.id %>/delete" method="post">
        <input type="submit" value="delete">
      </form>
    <% end %>
  </div>
</div>